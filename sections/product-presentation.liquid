      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "BetterMe Band:<br>The power of metrics",
      "label": "Section title"
    },
    {
      "type": "image_picker",
      "id": "card_background",
      "label": "Background for the bottom side card"
    },
    {
      "type": "header",
      "content": "Vertical paddings"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
