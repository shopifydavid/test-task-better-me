          "id": "show_popup",
          "label": "Show popup with additional content",
          "default": true
        },
        {
          "type": "text",
          "id": "popup_title",
          "label": "Popup title",
          "default": "Popup title"
        }, 
        {
          "type": "text",
          "id": "popup_subtitle",
          "label": "Popup subtitle",
          "default": "Popup subtitle"
        }, 
        {
          "type": "image_picker",
          "id": "popup_image",
          "label": "Popup Image"
        }, 
        {
          "type": "image_picker",
          "id": "popup_image_mobile",
          "label": "Popup Image on Mobile",
          "info": "Recommended ratio 3x4"
